#include "include\common.hlsli"

struct PSInput
{
    float4 position 	: SV_POSITION;
    float2 texCoord 	: TEXTURE_COORD;
};

Texture2D positionGbuffer : register(t0);
Texture2D normalTexGbuffer : register(t1);

SamplerState samp : register(s0);

float4 PSMain(PSInput input) : SV_TARGET
{
	float2 uv = input.texCoord.xy + float2(1.0f, 1.0f);
    float3 position = positionGbuffer.Sample(samp, uv / 2.0f).xyz;
	
    return float4(position, 1.0f);
}